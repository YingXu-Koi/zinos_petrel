# ==========================================
# Zino's Chat 环境配置模板
# ==========================================
# 使用说明：
# 1. 复制此文件为 .env
# 2. 填充实际的 API Keys 和配置
# 3. 确保 .env 已添加到 .gitignore
# ==========================================

# ------------------------------------------
# 核心 LLM 配置（必需）
# ------------------------------------------

# Qwen（通义千问）API
# 获取地址: https://dashscope.aliyun.com/
DASHSCOPE_API_KEY=sk-your-qwen-api-key-here

# 模型选择
QWEN_MODEL_NAME=qwen-turbo
# 可选值：qwen-turbo（推荐）, qwen-plus, qwen-max

# 温度参数配置
QWEN_TEMPERATURE_CONVERSATION=0.0
QWEN_TEMPERATURE_SCORING_POS=0.2
QWEN_TEMPERATURE_SCORING_NEG=0.0
QWEN_TEMPERATURE_SEMANTIC=0.4
QWEN_TEMPERATURE_ROUTER=0.0

# ------------------------------------------
# 向量嵌入配置（必需）
# ------------------------------------------

QWEN_EMBEDDING_MODEL=text-embedding-v3
# 可选值：text-embedding-v3（推荐，最新）, text-embedding-v2, text-embedding-v1
VECTOR_DB_PATH=db5_qwen

# ------------------------------------------
# 语音合成配置（必需）- Qwen TTS
# ------------------------------------------

# TTS 提供商（仅支持 Qwen）
TTS_PROVIDER=qwen

# Qwen TTS 配置
QWEN_TTS_MODEL=qwen3-tts-flash          # 推荐：qwen3-tts-flash（最新，音质最佳）
QWEN_TTS_VOICE=Cherry                   # Cherry（女声，活泼）或 Ethan（男声）
# 可选音色：Cherry, Ethan

QWEN_TTS_LANGUAGE=Chinese               # 建议与文本语种一致
QWEN_TTS_STREAM=false                   # 非流式（stream=False）获取 URL

# ------------------------------------------
# 智能体搜索配置（可选）
# ------------------------------------------

USE_WEB_SEARCH=true
WEB_SEARCH_PROVIDER=duckduckgo
ENABLE_SMART_ROUTING=true
ROUTING_CONFIDENCE_THRESHOLD=0.7

# Tavily（可选）
TAVILY_API_KEY=tvly-your-api-key
TAVILY_MAX_RESULTS=3

# ------------------------------------------
# RAG 检索配置
# ------------------------------------------

RAG_MMR_K=4
RAG_MMR_FETCH_K=20
RAG_MMR_LAMBDA=0.5

ENABLE_HISTORY_DEDUP=true
MAX_HISTORY_ROUNDS=10

ENABLE_HYBRID_SEARCH=false
ENABLE_RERANKING=false

# Cohere（可选）
COHERE_API_KEY=your-cohere-key
COHERE_RERANK_MODEL=rerank-english-v3.0
COHERE_RERANK_TOP_N=3

# ------------------------------------------
# 数据库配置（必需）
# ------------------------------------------

SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_TABLE_NAME=interactions

# ------------------------------------------
# 功能开关
# ------------------------------------------

FEATURE_QWEN_TTS=true
FEATURE_SMART_AGENT=true
FEATURE_HYBRID_RAG=false
FEATURE_GIFT_SYSTEM=true
FEATURE_VOICE_SELECTION=true

# ------------------------------------------
# 备用配置
# ------------------------------------------

OPENAI_API_KEY=sk-your-openai-key
ENABLE_OPENAI_FALLBACK=false

