# ==========================================

# ------------------------------------------
# 核心 LLM 配置（必需）
# ------------------------------------------

# Qwen（通义千问）API
# 获取地址: https://dashscope.aliyun.com/
DASHSCOPE_API_KEY=sk-4e53de70aba84acbbda2aa76278ba4be

# 模型选择
QWEN_MODEL_NAME=qwen-plus
# 可选值：qwen-turbo（推荐）, qwen-plus, qwen-max

# 温度参数配置
QWEN_TEMPERATURE_CONVERSATION=0.0
QWEN_TEMPERATURE_SCORING_POS=0.2
QWEN_TEMPERATURE_SCORING_NEG=0.0
QWEN_TEMPERATURE_SEMANTIC=0.4
QWEN_TEMPERATURE_ROUTER=0.0

# ------------------------------------------
# 向量嵌入配置（必需）
# ------------------------------------------

QWEN_EMBEDDING_MODEL=text-embedding-v3
VECTOR_DB_PATH=db5_qwen

# ------------------------------------------
# 语音合成配置（必需）- Qwen TTS
# ------------------------------------------

# TTS 提供商
TTS_PROVIDER=qwen
# 可选值：qwen（推荐）, gtts（降级）

# Qwen TTS 配置
QWEN_TTS_MODEL=cosyvoice-v1
QWEN_TTS_VOICE=longxiaochun
# 可选值：Cherry（女声，活泼）, Ethan（男声）

QWEN_TTS_LANGUAGE=Chinese
QWEN_TTS_STREAM=true

# 降级配置
USE_GTTS_FALLBACK=true

# ------------------------------------------
# 智能体搜索配置（可选）
# ------------------------------------------

USE_WEB_SEARCH=true
WEB_SEARCH_PROVIDER=duckduckgo
ENABLE_SMART_ROUTING=true
ROUTING_CONFIDENCE_THRESHOLD=0.7

# Tavily（可选）
TAVILY_API_KEY=tvly-your-api-key
TAVILY_MAX_RESULTS=3

# ------------------------------------------
# RAG 检索配置
# ------------------------------------------

RAG_MMR_K=4
RAG_MMR_FETCH_K=20
RAG_MMR_LAMBDA=0.5

ENABLE_HISTORY_DEDUP=true
MAX_HISTORY_ROUNDS=10

ENABLE_HYBRID_SEARCH=false
ENABLE_RERANKING=false

# Cohere（可选）
COHERE_API_KEY=your-cohere-key
COHERE_RERANK_MODEL=rerank-english-v3.0
COHERE_RERANK_TOP_N=3

